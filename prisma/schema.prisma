// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model PCProduct {
  id               String   @id
  sku              String   @unique
  name             String
  lineup           String
  price            Float
  currency         String   @default("CZK")
  
  // Specs (stored as separate fields for easy querying)
  cpu              String?
  gpu              String?
  ram              String?
  storage          String?
  cooling          String?
  psu              String?
  
  status           String
  stock            Int      @default(0)
  imageUrl         String?
  
  // Marketing fields (stored as JSON)
  images           String?  // JSON array of image URLs
  flags            String?  // JSON array of promo flags
  shortDescription String?
  tags             String?  // JSON array of tags
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([lineup])
  @@index([status])
  @@index([price])
}
